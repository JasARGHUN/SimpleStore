        <h5>Адрес:</h5> @await Component.InvokeAsync("InfoAddress")
    </div>
    <hr />
    <div>
        <h5>Контакты:</h5> @await Component.InvokeAsync("InfoPhone"),
        @await Component.InvokeAsync("InfoPhoneSecond")
