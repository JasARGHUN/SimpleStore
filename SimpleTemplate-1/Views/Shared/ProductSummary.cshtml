@model Product
@{
    var photoPath = "~/Images/" + (Model.Image ?? "someProduct.jpg");
}
<a asp-controller="product" asp-action="details" asp-route-id="@Model.ProductID" class="btn m-1">
    <form id="@Model.ProductID" asp-action="AddToCart"
          asp-controller="Cart" method="post">
        <input type="hidden" asp-for="ProductID" />
        <div class="card mt-3">
            <div class="bg-light text-center">
                <h4 class="m-3">
                    @Model.Name
                </h4>
                <img class="card-img-top imageSize border" src="@photoPath" alt="" asp-append-version="true" />
            </div>
            <div class="m-2">
                <h2 class="text-center m-2">@Model.Category</h2>
                <hr />
                <h4>@Model.ShortDescription</h4>
            </div>
        </div>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
    </form>
</a>