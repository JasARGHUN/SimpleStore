@model Product
@{
    var photoPath = "~/Images/" + (Model.Image ?? "someProduct.jpg");
}
    <form id="@Model.ProductID" asp-action="AddToCart"
          asp-controller="Cart" method="post">
        <input type="hidden" asp-for="@Model.ProductID" />
        <div class="card mt-3">
            <div class="bg-light text-center">
                <h4 class="m-3">
                    @Model.Name
                </h4>
                <img class="card-img-top imageSize border" src="@photoPath" alt="" asp-append-version="true" />
            </div>
            <div class="m-2">
                <h2 class="text-center m-2">@Model.Category</h2>
                <hr />
                <h4>@Model.Description</h4> @Model.Price
            </div>
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

            <div class="m-1 text-center btn-block">
                <a asp-action="List" asp-controller="Product" class="btn btn-warning m-1">Назад</a>
                <button type="submit"
                        class="btn btn-success m-1">
                    Добавить в корзину
                </button>
            </div>
        </div>
    </form>